#DocTop
- if !@header.blank? && @header == 'search'
	#NavBuffer.nav-buffer-big
- else
	#NavBuffer.nav-buffer
%nav.navbar.navbar-fixed-top{:role => "navigation"}
	.wrapper
		%a.logo{:href => '/'}
		.span.fl
			#CityBar.dropdown.fr
				%a.dropdown-toggle.p-r10{href: "javascript:void(0)", 'data-toggle' => "dropdown"}
					= @city.name
					%b.caret
				%ul.dropdown-menu.pull-right
					- City.all.each do |city|
						%li
							=link_to city.name, "/#{city.name}"
		.info
			.broadcast.fr
				#UserBar.dropdown.fr
					%a.dropdown-toggle.p-r10{href: "javascript:void(0)", 'data-toggle' => "dropdown"}
						Sign Up / Sign In
						%b.caret
					%ul.dropdown-menu.pull-right
						%li
							%a{href: "javascript:void(0)", onclick: "showModal('Sign Up', '/users/signup');"}
								Sign Up
						%li
							%a{href: "javascript:void(0)", onclick: "showModal('Sign In', '/users/signin');"}
								Sign In
						%li
							%a{href: "javascript:void(0)", onclick: "showModal('Sign In', '/users/forgot');"}
								Forgot Password
			%a.hiring.fr.ts-3.f-b.pointer{href: "/careers"}
				We're Hiring
			.fc
			.support
				#{CommonHelper::CUSTOMER_CARE}
		.links
			%ul.nav.navbar-nav.fr
				- if @header.blank? || @header != 'homepage'
					- cls = (!@header.blank? && (@header == 'search' || @header == 'booking')) ? 'active' : ''
					%li
						%a{class: cls, href: "javascript:void(0)", onclick: "showSearch();"} Book Cars
				%li.dropdown
					- cls = (!@header.blank? && @header == 'tariff') ? 'dropdown-toggle active' : 'dropdown-toggle'
					%a{class: cls, href: "javascript:void(0)", 'data-toggle' => "dropdown"}
						Tariffs
						%b.caret
					%ul.dropdown-menu
						%li
							%a{href: "/#{@city.name}/tariff"}
								Tariffs Details
						%li
							%a{href: "javascript:void(0)", onclick: "showModal('Tariff Calculator', '/#{@city.name}/calculator/tariff');"}
								Tariff Calculator
						%li
							%a{href: "javascript:void(0)", onclick: "showModal('Trip Modification Estimator', '/#{@city.name}/calculator/reschedule');"}
								Trip Modification Estimator
				%li.dropdown
					- cls = (!@header.blank? && @header == 'help') ? 'dropdown-toggle active' : 'dropdown-toggle'
					%a{class: cls, href: "javascript:void(0)", 'data-toggle' => "dropdown"}
						How It Works
						%b.caret
					%ul.dropdown-menu
						%li
							%a{href: "/#{@city.name}/howtozoom"}
								This is How You Zoom
						%li
							%a{href: "/#{@city.name}/safety"}
								Zoom in Safety
						%li
							%a{href: "/#{@city.name}/outstation"}
								Going Outstation?
						%li
							%a{href: "/#{@city.name}/reva"}
								Zoom's Electric!
						%li
							%a{href: "/#{@city.name}/faq"}
								FAQs
						%li
							%a{href: "/#{@city.name}/handover"}
								Zoom Responsibly
				%li.dropdown
					- cls = (!@header.blank? && @header == 'policy') ? 'dropdown-toggle active' : 'dropdown-toggle'
					%a{class: cls, href: "javascript:void(0)", 'data-toggle' => "dropdown"}
						Policies
						%b.caret
					%ul.dropdown-menu
						%li
							%a{href: "/#{@city.name}/fees"}
								Fee Policy
						%li
							%a{href: "/#{@city.name}/eligibility"}
								Eligibility
						%li
							%a{href: "/#{@city.name}/member"}
								Member Agreement
						%li
							%a{href: "/#{@city.name}/privacy"}
								Privacy Policy
				%li
					- cls = (!@header.blank? && @header == 'offers') ? 'active' : ''
					%a{class: cls, href: "/#{@city.name}/offers"} Offers
				%li
					%a{href: "/#{@city.name}/blog"} Blog
			.fc
		.fc
	- cls = (!@header.blank? && @header == 'search') ? '' : 'hide'
	- if !@header.blank? && @header == 'search'
		#SH
			#SearchFormDiv.search-header
				= render :partial => '/bookings/widget'
	- else
		#SH{:style => 'display:none;'}
			#SearchFormDiv.search-header
				#SHContent
				#SHWait.t-c
					.wait.m-auto
#Flash.wrapper
