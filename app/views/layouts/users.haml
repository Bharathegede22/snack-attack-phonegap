!!!
%html{lang: "en"}
	= render :partial => "/layouts/head_static"
	- cls = (!cookies[:abtestd].blank?) ? 'body-header-new' : ''
	%body{:class => cls}
		= render :partial => (!cookies[:abtestd].blank?) ? "/layouts/header" : "/layouts/header_old"
		.content
			.wrapper.bg-f
				.p-20
					- if current_user && !current_user.check_license && params[:action] != 'license'
						.alert.alert-danger
							Please upload your driving license to enjoy full Zoomcar services. 
							%a.f-b{href: "/users/license"} Click here 
					= yield
		= render :partial => '/layouts/footer'
