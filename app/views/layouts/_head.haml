%head
	%title= @meta_title
	%meta{content: @meta_description, name: "description"}/
	%meta{content: @meta_keywords, name: "keywords"}/
	- if @canonical && !@canonical.empty?
		%link{href: @canonical, rel: "canonical"}/
	- if Rails.env != 'production' || HOSTNAME.include?('test') || @noindex
		%meta{content: "noindex", name: "robots"}/
	- else
		%meta{content: "index,follow", name: "robot"}/
		%meta{content: "3", name: "revisit-after"}/
	%meta{content: "Â© Copyright #{Time.now.year} ZoomCar India Private Ltd. All rights reserved.", name: "copyright"}/
	%meta{content: "ZoomCar India Private Ltd.", name: "author"}/
	%meta{content: "www.onlinemetatag.com", name: "generator"}/
	%meta{content: "English", name: "language"}/
	%meta{charset: "utf-8"}/
	= stylesheet_link_tag "application", :media => "screen"
	%link{href: asset_path('favicon.png'), rel: "shortcut icon", type: "image/png"}/
	%link{href: "https://fonts.googleapis.com/css?family=Droid+Sans", rel: "stylesheet"}/
	- js = javascript_include_tag 'application'
	- js = js.split('src="').last
	- js = js.split('"').first
	:javascript
		function downloadJSAtOnload() {
			var element = document.createElement("script");
			element.src = "#{js}";
			document.body.appendChild(element);
		}
		if (window.addEventListener)
			window.addEventListener("load", downloadJSAtOnload, false);
		else if (window.attachEvent)
			window.attachEvent("onload", downloadJSAtOnload);
		else window.onload = downloadJSAtOnload;
		var _gaq = _gaq || [];
		_gaq.push(['_setAccount', 'UA-38347989-1']);
		_gaq.push(['_setDomainName', 'zoomcar.in']);
		_gaq.push(['_setAllowLinker', true]);
		_gaq.push(['_trackPageview']);
		(function() {
			var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
			ga.src = ('https:' == document.location.protocol ? 'https://' : 'http://') + 'stats.g.doubleclick.net/dc.js';
			var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
		})();
