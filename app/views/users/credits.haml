- render_flash
%h4
	Credits History


.panel.panel-default
	.panel-heading
		%h3.panel-title Credits Used
	- if current_user.credits.where(:action=>'debit').any?
		.panel-body
			%table.table
				%th Date 
				%th Source
				%th Amount â‚¹
				- current_user.credits.where(:action=>'debit').order(:created_at => :desc).each do |credit|
					%tr
						%td= credit.created_at.strftime("%d %B %Y")
						%td= credit.source_name
						%td= credit.amount
	%br/
	.panel-heading
		%h3.panel-title Credits Earned
	- if current_user.credits.where(:action=>'credit').any?
		.panel-body
			%table.table
				%th Date 
				%th Source
				%th Amount â‚¹
				- current_user.credits.where(:action=>'credit').order(:created_at => :desc).each do |credit|
					%tr
						%td= credit.created_at.strftime("%d %B %Y")
						%td= credit.source_name
						%td= credit.amount