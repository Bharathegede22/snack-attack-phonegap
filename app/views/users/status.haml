- if user_signed_in?
	%a.dropdown-toggle{:href => "javascript:void(0)", 'data-toggle' => "dropdown"}
		My Account
		%b.caret
	%ul.dropdown-menu
		%li
			%a{:href => "#{@sslhost}/bookings?ref=header"} My Bookings
		%li
			%a{:href => "#{@sslhost}/users/settings?ref=header"}
				Account Settings
		%li
			%a{:href => "javascript:void(0)", :onclick => "logOut('#{destroy_user_session_path}');"}
				Logout
- else
	%a.dropdown-toggle{:href => "javascript:void(0)", 'data-toggle' => "dropdown"}
		My Account
		%b.caret
	%ul.dropdown-menu
		%li
			%a{:href => "javascript:void(0)", :onclick => "showModal('Sign Up', '/users/signup');"}
				Sign Up
		%li
			%a{:href => "javascript:void(0)", :onclick => "showModal('Sign In', '/users/signin');"}
				Sign In
- if user_signed_in? && !session[:social_signup].blank?
	- if session[:social_signup] == 0
		- session[:social_signup] = nil
		:javascript
			userLogin();
	- else
		:javascript
			showModal('Sign Up', '/users/social');
- if session[:confirmed] == 1
	- session[:confirmed] = nil
	:javascript
		userActive();
