- @user ||= User.new
#SignupDiv
	.login.t-c
		%table.m-auto
			%tr
				%td
					%a.facebook{:href => "#{user_omniauth_authorize_path(:facebook)}"}
				%td
					- if false
						%a.gplus{:href => "#{user_omniauth_authorize_path(:google_oauth2)}"}
		%br/
		OR
		%br/
		%br/
		- render_flash
		%form{:id => "LoginForm", :onsubmit => "return SubmitForm(this,'#{registration_path(:user)}','SignupDiv');", :action => "javascript:void(0)", "data-ajax" => "false"}
			.form-horizontal
				.row.form-group
					.col-sm-3.col-sm-offset-1.t-r
						%label.control-label Email
					.col-sm-6
						%input#LoginEmail.validate-presence.form-control{name: 'user[email]', type: "text", value: resource.email}
						#LoginEmailError.error.t-l
							= errortxt(@user.errors[:email].uniq.join(', '))
				.row.form-group
					.col-sm-3.col-sm-offset-1.t-r
						%label.control-label Password
					.col-sm-6
						%input#LoginPass.validate-presence.form-control{name: "user[password]", type: "password", value: resource.password}
						#LoginPassError.error.t-l
							= errortxt(@user.errors[:password].uniq.join(', '))
				.row.form-group
					.col-sm-3.col-sm-offset-1.t-r
						%label.control-label Confirm Password
					.col-sm-6
						%input#LoginPassConfirm.validate-presence.form-control{name: "user[password_confirmation]", type: "password"}
						#LoginPassConfirmError.error.t-l
							= errortxt(@user.errors[:password_confirmation].join(', '))
				.row
					.col-sm-3.col-sm-offset-1
					.col-sm-6.t-l
						#LoginSubmit
							= submit_tag "Submit", :class => 'btn btn-default'
						#LoginWait.p-5.hide
							.wait
		.p-t10
			.row.f-b
				.col-sm-6.t-l
					%a{:href => "javascript:void(0)", :onclick => "getData('/users/signin', 'SignupDiv', 'replace', null);"}
						Sign In?
				.col-sm-6.t-r
					%a{:href => "javascript:void(0)", :onclick => "getData('/users/forgot', 'SignupDiv', 'replace', null);"}
						Forgot your password?
