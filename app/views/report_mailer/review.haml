%h1 Booking Feedback Details
%table
	%tr
		%td{colspan: '2'}
			%b User Details
	%tr
		%td Name
		%td #{@booking.user_name}
	%tr
		%td Email
		%td #{@booking.user_email}
	%tr
		%td Mobile
		%td #{@booking.user_mobile}
	%tr
		%td{colspan: '2'}
			%b Feedback Details
			%br/
			%br/
			%b #{CommonHelper::RATINGS_QUESTION[0]}
			%br/
			= CommonHelper::RATINGS[@review.rating_tech.to_i-1][0]
			%br/
			%br/
			%b #{CommonHelper::RATINGS_QUESTION[1]}
			%br/
			= CommonHelper::RATINGS[@review.rating_location.to_i-1][0]
			%br/
			%br/
			%b #{CommonHelper::RATINGS_QUESTION[2]}
			%br/
			= CommonHelper::RATINGS[@review.rating_friendly.to_i-1][0]
			%br/
			%br/
			%b #{CommonHelper::RATINGS_QUESTION[3]}
			%br/
			= CommonHelper::RATINGS[@review.rating_condition.to_i-1][0]
			%br/
			%br/
			%b Comments
			%br/
			- if !@review.comment.blank?
				= '-'
			- else
				= @review.comment
