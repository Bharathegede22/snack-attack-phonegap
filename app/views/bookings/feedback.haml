- @review = @booking.review
.wrapper.bg-f
	.p-20
		.row
			.col-sm-8
				- if !@review
					#FeedbackDiv
						= render partial:"feedback_form"
				- else
					- render_flash
					.panel.panel-default
						.panel.panel-heading
							%h1.panel-title Your Feedback Details
						.panel-body
							.form
								.form-group
									%label #{CommonHelper::RATINGS_QUESTION[0]}
									%p.form-control
										= CommonHelper::RATINGS[@review.rating_tech.to_i-1][0]
								.form-group
									%label #{CommonHelper::RATINGS_QUESTION[1]}
									%p.form-control
										= CommonHelper::RATINGS[@review.rating_location.to_i-1][0]
								.form-group
									%label #{CommonHelper::RATINGS_QUESTION[2]}
									%p.form-control
										= CommonHelper::RATINGS[@review.rating_friendly.to_i-1][0]
								.form-group
									%label #{CommonHelper::RATINGS_QUESTION[3]}
									%p.form-control
										= CommonHelper::RATINGS[@review.rating_condition.to_i-1][0]
								.form-group
									%label Comments
									%p.form-control
										= @review.comment
			.col-sm-4.bg-e.r-10
				%h2 Booking Details
				%table.table
					%tr
						%td
							%b Booking #
						%td
							= @booking.confirmation_key.upcase
					%tr
						%td
							%b Car Type
						%td
							- cargroup = @booking.cargroup
							= cargroup.display_name
					%tr
						%td
							%b Rented From
						%td
							- location = @booking.location
							= location.shortname
					%tr
						%td
							%b Pickup Time
						%td
							= @booking.starts.strftime("%d %b, %Y %I:%M %p")
					%tr
						%td
							%b Dropoff Time
						%td
							= @booking.ends.strftime("%d %b, %Y %I:%M %p")
