.content
	= render :partial => "/bookings/search_steps", locals: {step: 2}
	.wrapper
		- render_flash
		.main-content.fl.bg-w.bs-9
			.p-20
				- if user_signed_in?
					- if current_user.check_details
						:javascript
							window.location = "/#{@city.name}/bookings/do";
					- else
						.p-20.f-b.t-c.size-16.grey
							Please complete your registration
						= render :template => "/users/signup"
				- else
					= render :template => "/devise/sessions/new"
		.sidebar-fixed.fr
			= render :partial => "/bookings/sidebar", locals: {step: 2}
		.fc
		%br/
