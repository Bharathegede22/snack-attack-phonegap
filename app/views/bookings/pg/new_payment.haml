.payment-wrapper.m-t20
	.logo
	.payment-block.fc
		.payment-order-summary.p-l15.p-r15.m-t20
			.payment-total-amt.fl
				%h4.white.size-15.m-t0.m-b0.p-t15.p-b15.fo-helv 
					%span.f-n 
						Amount: 
					Rs #{@payment.amount.to_i}
			.payment-tranction-id.fr
				%h4.white.size-15.m-t0.m-b0.p-t15.p-b15.fo-helv
					%span.f-n 
						Transaction ID:
					#{@payment.encoded_id}
		.payment-method-banner.p-15
			%b.size-13 Choose a payment method
		.payment-options
			= render :partial => "bookings/pg/payment_options"
		.p-t5.p-b10.payment-footer-logo
			.fc.inline-block{:style => "margin-left: 0px"}
				%div
					= image_tag asset_path('godaddy.gif'), :size => '131x32', :onclick => 'verifyGoDaddySSLSeal();'
			.fr
				%div.f-n.grey.m-t15
					We do not store your card details.

