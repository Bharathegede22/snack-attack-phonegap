.search-steps-bg
	.search-steps.droid.f-b
		%table.m-auto
			%tr
				- cls = (step > 1 ? 'complete' : 'active')
				- onclick = (step > 1 ? "window.location = '/search';" : "")
				%td{class: cls, onclick: "#{onclick}"}
					.step
						%p 1
				%td{class: cls, onclick: "#{onclick}"}
					.txt
						Select Car
				- cls = (step == 2 ? 'active' : (step > 2 ? 'complete' : 'normal'))
				- onclick = (step > 2 ? "window.location = '/bookings/login';" : "")
				%td{class: cls, onclick: "#{onclick}"}
					.step 
						%p 2
				%td{class: cls, onclick: "#{onclick}"}
					.txt
						Register or Signin
				
				- cls = (step == 4 ? 'active' : (step > 4 ? 'complete' : 'normal'))
				%td{class: cls}
					.step
						%p 3
				%td{class: cls}
					.txt
						Checkout
				- if true
					- cls = (step == 5 ? 'active' : (step > 5 ? 'complete' : 'normal'))
					- onclick = (step > 5 ? "window.location = '/bookings/license';" : "")
					%td{class: cls, onclick: "#{onclick}"}
						.step 
							%p 4
					%td{class: cls, onclick: "#{onclick}"}
						.txt
							License Details
