- @cargroup = Cargroup.list
.homepage
	.cars
		.h1
			%h1.zoom
				%span Self-Drive Cars in Bangalore
			%p
				By the Hour or by the Day
			.fc
		.slider
			#CarSlider.liquid-slider
				- @cargroup.each do |cargroup|
					- if cargroup == @cargroup[0]
						- style = "background:url(#{asset_path 'cars/' + cargroup.id.to_s + '.jpg'}) no-repeat center top;"
						- databg = ''
					- else
						- style = "opacity: 0; z-index: 0;"
						- databg = asset_path 'cars/' + cargroup.id.to_s + '.jpg'
					.lazy{:style => style, 'data-background' => databg}
						.cars-content
							%h3.title.hide
								= cargroup.display_name.gsub('Mahindra ','')
	.tariff
		.size-16.white.f-i.p-t10
			our tariff includes
		.includes
			#BubbleAllIn.item.left
				.all-in
				.text 
					No Hidden Costs
			#BubbleFuel.item
				.fuel
				.text
					Fuel
			#BubbleInsurance.item
				.insurance
				.text 
					Insurance
			#BubbleTaxes.item
				.taxes
				.text 
					Taxes
			#BubbleNav.item
				.navigation
				.text 
					Navigation
			#BubbleDeposit.item.right
				.deposit
				.text
					No Deposit
			.fc
		.slider
			#TariffSlider.liquid-slider
				- @cargroup.each do |cargroup|
					%div
						.content
							.item.r-5
								.head Hourly Trip
								.exp Upto 24 Hours
								.fare
									%b ₹#{cargroup.hourly_fare} / hour
								.kms
									#{cargroup.hourly_km_limit} Kms / hour. Max 200 Kms
								.offer
									Mon-Thurs 35% Discount
							.item.r-5
								.head Daily Trip
								.exp After 24 Hours
								.fare
									%b ₹#{cargroup.daily_fare} / day
								.kms
									#{cargroup.daily_km_limit} Kms / day
								.offer
									Mon-Thurs 35% Discount
							.item.r-5
								.head Weekly Trip
								.exp After 7 Days
								.fare
									%b ₹#{cargroup.hourly_fare} / week
								.kms
									#{cargroup.hourly_km_limit} Kms / week
								.offer
									Best price
							.item.last.r-5
								.head Monthly Trip
								.exp After 4 Weeks
								.fare
									%b ₹#{cargroup.hourly_fare} / month
								.kms
									#{cargroup.hourly_km_limit} Kms / month
								.offer
									Best Price
							.fc
	.wrapper
		.widget
			.bg
			.fg
				%h3.title.r-tl-5.r-tr-5
					Book a Car
				.box
				.box
				.box
				.box
				.button
					Search Car
