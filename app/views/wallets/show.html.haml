.panel.panel-default
	.panel-heading
		%h3.panel-title Your Deposit Wallet
	.panel-body
		%h3 Total: #{current_user.wallet_total_amount}
		%h3 Available: #{current_user.wallet_total_amount}
		%h3 Fronzen: #{current_user.wallet_frozen_amount}
		= form_tag 'refundDeposit' do
			= text_field_tag 'amount'
			= submit_tag 'Refund'

		%h3 Wallet Snapshot
		/ %table.table
		/ 	-snap = current_user.wallet_snapshot
		/ 	%tr
		/ 		%td= #{snap.key}
		/ 		%td= #{snap.value.fetch :amount}
		/ 		%td= #{snap.value.fetch :booking}
