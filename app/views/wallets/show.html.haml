.panel.panel-default
	.panel-heading
		%h3.panel-title Your Deposit Wallet
	.panel-body
		%h3 Total: #{current_user.wallet_total_amount}
		%h3 Available: #{current_user.wallet_total_amount}
		%h3 Fronzen: #{current_user.wallet_frozen_amount}
		= form_tag 'refundDeposit' do
			= text_field_tag 'amount'
			= submit_tag 'Refund'

		%h3 Wallet Snapshot
		%table.table
			-current_user.wallet_snapshot[:bookings].each do |booking|
				%tr
					%td= link_to booking[:booking], booking_path(booking[:booking])
					%td= "#{booking[:starts]}"
					%td= "#{booking[:ends]}"
