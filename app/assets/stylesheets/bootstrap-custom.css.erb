}

.reviews .left, .reviews .right {
	display:block;
  cursor: pointer;
  width:40px;
  height:40px;
  position:absolute;
  top:10px;
}

.reviews .left {
	background:url(<%= asset_path 'r.png' %>) no-repeat;
	background-position:-170px -160px;
  left:0px;
  z-index:30;
}

.reviews .right {
	right:0px;
	background:url(<%= asset_path 'r.png' %>) no-repeat;
	background-position:-210px -160px;
	z-index:30;
}

.reviews .left:hover {
  background-position:-170px -120px;
}

.reviews .left:active {
  background-position:-170px -160px;
}

.reviews .right:hover {
  background-position:-210px -120px;
}

.reviews .right:active {
