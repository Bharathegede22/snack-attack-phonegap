/*==============================*/
 //variables
/*==============================*/
$black: #323a45;
$white: #fff;
$green: #6ABD19;
$grey: #C5C5C5;
$light-grey:#70757D;
$width960: 960px;
$grey-bg:	#eee;
$border-black1px: 1px #323a45 solid;
$border-black2px: 2px #323a45 solid;
$border-black3px: 3px #323a45 solid;
$border-grey1px: 1px #ccc solid;
$border-grey2px: 2px #ccc solid;
$border-grey3px: 3px #ccc solid;

/*==============================*/
 //Silent classes
/*==============================*/
%btnbase {
  border:3px solid #000;
  padding:10px 20px;
  color:#fff;
  border-radius:10px;
  background: red;
  width: 100px;
  height: 50px;
}
.clear{
	clear: both;
}
.disable-btn{
	background: $grey;
	cursor: default !important;
	color: $white !important;
	&:hover{
		text-shadow: none;
	}
}
/*==============================*/
 //mixins
/*==============================*/
@mixin delhi_review_cars{
	background: url(<%= asset_path 'cars/strip-2.png' %>) no-repeat;
	width: 100px;
	height: 65px;
	zoom:1.3;
}
@mixin Service_icons_set{
	background: url(<%= asset_path 'icon_set2.png' %>) no-repeat;
	width: 57px;
	height: 57px;
}
@mixin delhi_reviews_item_background{
	background: url(<%= asset_path 'delhi_review_bg.png' %>) no-repeat;
	overflow: hidden;
	background-position-x: 57em;
}
@mixin shadow_separate_line{
	width: $width960;
	margin: 1em auto;
	height: 10px;
	-moz-box-shadow: 0 5px 4px -4px rgba(0, 0, 0, 0.4);
	-webkit-box-shadow: 0 5px 4px -4px rgba(0, 0, 0, 0.4);
	box-shadow: 0 5px 4px -4px rgba(0, 0, 0, 0.4);
}
/*==============================*/
 //main-styles
/*==============================*/

